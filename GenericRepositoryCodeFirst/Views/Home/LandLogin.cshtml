@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LandLogin</title>
    <link href="~/AngularJS/AngularContent/Home.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="~/AngularJS/AngularMVC/jquery.min.js"></script>
    <script src="~/AngularJS/AngularMVC/bootstrap.min.js"></script>
    <script src="~/AngularJS/AngularMVC/angular.min.js"></script>
    <script src="~/AngularJS/AngularMVC/angular.route.min.js"></script>
    <script data-require="angular.js@1.2.x" src="http://code.angularjs.org/1.2.15/angular.js" data-semver="1.2.15"></script>
    <script src="~/AngularJS/AngularMVC/UploadModule.js"></script>
    <script src="~/AngularJS/AngularMVC/UploadController.js"></script>
    <script src="~/AngularJS/AngularMVC/UploadServices.js"></script>
    <link href="~/AngularJS/AngularMVC/ModalHtml.css" rel="stylesheet" />

    <script src="~/AngularJS/AngularMVC/LandLoginScript.js"></script>
    <link href="~/AngularJS/AngularMVC/LandLoginStyle.css" rel="stylesheet" />


</head>
<body ng-app="PaytmApp">
 
       <div ng-controller="LandingLoginCtrl" ng-init="Login = 'true'">

        <div class="row LandingHead">
            <div class="col-md-3">
                <img src="~/Images/shop1.png" width="200" height="100" />
            </div>
            <div class="col-md-9">
                <div class="row SecondMenu">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-3">
                        <a class="LandingPageBtns">
                            <span class="glyphicon glyphicon-home"></span>&nbsp;Download App</a>
                    </div>
                    <div class="col-md-3">
                        <a class="LandingPageBtns" ng-click="Signup ='true'">
                            <span class="glyphicon glyphicon-user"></span>&nbsp;Sign Up</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row ">
            <div class="col-md-12">
                <p style="height: 40px;"></p>
            </div>
        </div>

        <div class="row" >
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-12">
                        <div class="container" style="width: 500px;">
                            <p>Our Product Category's</p>
                            <div id="myCarousel" class="carousel slide" data-interval="2000" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                    <li data-target="#myCarousel" data-slide-to="2"></li>
                                    <li data-target="#myCarousel" data-slide-to="3"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img src="~/Images/Mencloth.jpg" width="100" height="100" />
                                    </div>

                                    <div class="item">
                                        <img src="~/Images/Womancloth.jpg" width="100" height="100" />
                                    </div>

                                    <div class="item">
                                        <img src="~/Images/Cyclemobile.jpg" width="100" height="100" />
                                    </div>

                                    <div class="item">
                                        <img src="~/Images/Kitchen.jpg" width="100" height="100" />
                                    </div>
                                </div>

                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-12">
                        <div id="NewAccountDiv" ng-show="Signup == 'true'" ng-hide="Login=='true'">
                            <form name="NewCustomer" ng-submit="NewCustomerSignUp(NewCustomer)">
                                <p>Create New Account</p>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-envelope"></span>
                                            </span>
                                            <input class="LandCtrls" type="text" ng-model="SignUp.EmailId" placeholder="EmailId" />
                                        </div>
                                    </div>
                                    <div class="col-md-12 Gap"></div>
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-phone"></span>
                                            </span>
                                            <input class="LandCtrls" type="text" ng-model="SignUp.Mobile" placeholder="Mobile" />
                                        </div>
                                    </div>
                                    <div class="col-md-12 Gap"></div>
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-user"></span>
                                            </span>
                                            <input class="LandCtrls" type="text" ng-model="SignUp.Username" placeholder="Username" />
                                        </div>
                                    </div>
                                    <div class="col-md-12 Gap"></div>
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </span>
                                            <input class="LandCtrls" type="password" ng-model="SignUp.Password" placeholder="Password" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">
                                        <button type="button" class="LandingPageBtns" ng-click="Signup='false'">Cancel</button>
                                    </div>
                                    <div class="col-md-2">
                                       <button type="submit" class="LandingPageBtns">Submit </button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <b>{{SignUpErrMsg}}</b>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="LoginDiv" ng-hide="Signup == 'true'" ng-show="Signup == 'false'">
                            <form name="ExistingCustomer" ng-submit="ReturningCustomer(ExistingCustomer)">
                                <p>Login Account Here</p>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-envelope"></span>
                                                    </span>
                                                    <input class="LandCtrls" type="text" ng-model="Landing.EmailId" placeholder="Enter Your EmailId" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 Gap"></div>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-pencil"></span>
                                                    </span>
                                                    <input class="LandCtrls" type="Password" ng-model="Landing.Password" placeholder="Enter your Password" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 Gap"></div>
                                            <div class="col-md-12">
                                                <a class="ForgetPass">
                                                    <span class="glyphicon glyphicon-pencil"></span>Forget Your Password???</a>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2 col-md-offset-6">
                                                <button type="submit" class="LandingPageBtns">Login </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12" ng-show="LoginErrImg">
                                                <img src="~/Images/wrong.jpg" width="50px" height="50px" /><br />
                                                Wrong 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
