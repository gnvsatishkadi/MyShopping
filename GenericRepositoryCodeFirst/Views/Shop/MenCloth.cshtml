@{
    ViewBag.Title = "Men / Clothes";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<!doctype>
<html>
<head>
    <title>MenCloth</title>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/AngularJS/AngularContent/farbtastic.js"></script>
    <link href="~/AngularJS/AngularContent/farbtastic.css" rel="stylesheet" />
    @* <script src="~/AngularJS/AngularMVC/UploadModule.js"></script>*@

    <link href="~/AngularJS/AngularContent/UploadCss.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {

            //jquery
            alert($(location).attr('href'));
            var url = document.URL.split('=')[1];
            if (url == undefined) {
                alert('hey you changed url content');
                return false;
            }
            $('#URLcontent').val($(location).attr('href'));
        });
    </script>
</head>
<body>
    <div class="row" id="ChoiceDisplay">
        <div id="URLcontent" style="visibility: hidden"></div>
        <label>{{message}}</label>
        <div class="col-md-12" ng-controller="DashboardClothProductController">
            <label>main</label>
            <div class="row">
                <div class="col-md-3">
                    <label>side</label>
                    <div class="panel panel-default">
                        <div class="panel-heading">Product Type*</div>
                        <div class="panel-body">
                            <p ng-repeat="item in ProductList">
                                <input type="checkbox" ng-checked="ChooseProdtype(item.ProdType)" />
                                <label>{{item.ProdType}}</label>
                            </p>

                            <p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Select Gender:</label>
                                    </div>
                                    <div class="col-md-6">
                                        <select class="btn btn-primary dropdown-toggle" ng-model="Gender" ng-options="c.Gender for c  in GenderList">
                                            <option value="">Select Gender:</option>
                                        </select>
                                    </div>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <label>contentrow</label>
                    <div class="row">
                        <div class="col-md-12">
                            <label>content</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
