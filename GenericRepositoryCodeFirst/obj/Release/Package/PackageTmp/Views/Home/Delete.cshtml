@model GRDataModel.RepRegister

@{
    ViewBag.Title = "Updates";
}

<h2>Updates</h2>

@using (Html.BeginForm("Deletes", "Home", FormMethod.Post))
{
    <table>
        <tr>
            <td>Name</td>
            <td>@Html.TextBoxFor(m => m.Name)
                @Html.Hidden("id",Model.RepRegisterId);
            </td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.TextBoxFor(m => m.Email)</td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td>@Html.TextBoxFor(m => m.Mobile)</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Delete" />
                
            </td>
        </tr>
    </table>
}